<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_plomon"
    tools:context=".ArequipaPlato1Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_plomon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_plomon"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="center"
                app:srcCompat="@drawable/rocoto_relleno" />

            <TextView
                android:id="@+id/textView4"
                style="@style/texto_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rocoto Relleno" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="INGREDIENTES : 4-6 rocotos (1.080 kg) 5 cdas. de azúcar (75 gr) 2 limones (60 gr) Aceite Primor en cantidad necesaria 2 cebollas grandes picadas (300 gr) 3 dientes de ajo picados (6 gr) 2 cdas. de ají panca molido (30 gr) 400 gr de carne de res molida o picada Sal y pimienta al gusto ½ cdta. de orégano (3 gr) 100 gr de maní tostado y molido 3 huevos duros 250 gr de queso fresco 1½ kg de papa 3 huevos 3 tazas de leche (750 ml)"
                        android:textColor="@color/color_plomo"
                        android:textSize="20dp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button4"
        style="@style/boton_platos3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>