<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_plomon"
    tools:context=".ArequipaPlato1Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_plomon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_plomon"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="center"
                app:srcCompat="@drawable/picadillo_paiche" />

            <TextView
                android:id="@+id/textView4"
                style="@style/texto_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Picadillo de Paiche" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="Recetas: Pimiento rojo 1/2 Unidad Chincho 1 Ramita Cilantro c/n Hojas Aceite 1/2 Taza Ajo 2 Dientes Tomate 1 Unidad Habas verdes 1 Taza Laurel 1 Hoja Mishquina 2 cdas Cebolla morada 1/2 Unidad Paiche desalado y escaldado 1/2 Kilo Pasta de ajo c/n Pimienta negra c/n Sal c/n"
                        android:textColor="@color/color_plomo"
                        android:textSize="20dp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button4"
        style="@style/boton_platos3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>